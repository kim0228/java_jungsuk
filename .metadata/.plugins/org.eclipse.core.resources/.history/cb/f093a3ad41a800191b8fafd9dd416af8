import java.util.Scanner;

public class Problem_01 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int a, b, c, d;
		
		System.out.println("첫번째 계산할 합을 입력하세요");
		a = scanner.nextInt();
		System.out.println("두번째 계산할 합을 입력하세요");
		b = scanner.nextInt();
		System.out.println("세번째 계산할 합을 입력하세요");
		c= scanner.nextInt();
		System.out.println("네번째 계산할 합을 입력하세요");
		d = scanner.nextInt();
		System.out.println();
	}
	
}
